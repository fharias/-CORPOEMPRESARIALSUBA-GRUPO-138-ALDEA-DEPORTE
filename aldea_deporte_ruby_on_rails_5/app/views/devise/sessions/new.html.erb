<div class="page-header clear-filter" filter-color="orange">
    <!--<div class="page-header-image" style="background-image:url(/assets/bg1.jpg)"></div>-->

    <div class="content" style="margin-top: 3%; margin-bottom: 0px">
      <div class="container">
        <div class="col-lg-4 col-md-8 ml-auto mr-auto">
          <div class="card card-login card-plain">
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="card-header text-center">
                <div class="logo-container">
                  <h4><%= I18n.t 'devise.sessions.new.sign_in' %></h4>
                  <img src="/assets/logo.png" alt="" width="150">
                </div>
              </div>
              <div class="card-body">
                <div class="input-group no-border input-lg">
                  <div class="input-group-prepend">
                    <span class="input-group-text">
                      <i class="now-ui-icons users_circle-08"></i>
                    </span>
                  </div>
                  <%= f.email_field :email, autofocus: true, autocomplete: "email", required: true,
                      class: "form-control", placeholder: I18n.t('activerecord.attributes.user.email') %>
                </div>
                <div class="input-group no-border input-lg">
                  <div class="input-group-prepend">
                    <span class="input-group-text">
                      <i class="now-ui-icons text_caps-small"></i>
                    </span>
                  </div>
                  <%= f.password_field :password, autocomplete: "current-password", required: true,
                      placeholder: I18n.t('activerecord.attributes.user.password'), class: "form-control" %>
                </div>
                <div class="input-group no-border">
                    <% if devise_mapping.rememberable? -%>
                      <div class="">
                        <%= f.check_box :remember_me, class: "bootstrap-switch" %>
                        <%= f.label :remember_me, class: "form-check-label" %>
                      </div>
                    <% end -%>
                  </div>
              </div>
              <div class="card-footer text-center">
                <%= f.submit I18n.t('devise.sessions.new.sign_in'), class: "btn btn-primary btn-round btn-lg btn-block" %>
                <!--<a href="#pablo" class="btn btn-primary btn-round btn-lg btn-block">Get Started</a>-->
                <%= render "devise/shared/links" %>
                <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>

</div>

